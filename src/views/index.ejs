<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Nodejs Mysql CRUD</title>
    <!-- NAVIGATION -->
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
  </head>
  <body>

    <!-- navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">CRUD Nodejs Mysql</a>
    </nav>
    
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-7">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <td>nÂ°</td>
                <td>Nombre</td>
                <td>Direccion</td>
                <td>Edad</td>
                <td>Actions</td>
              </tr>
            </thead>
            <tbody>
            <% if (data) { %>
             <% for( let i = 0; i < data.length; i++ ) { %>
              <tr>
              <td><%= (i + 1) %></td>
              <td><%= data[i].nombre %></td>
              <td><%= data[i].direccion %></td>
              <td><%= data[i].edad %></td>
              <td>
                <a href="/editar/<%= data[i].id %>" class="btn btn-primary btn-sm">Editar</a>
                <a href="/eliminar/<%= data[i].id %>" class="btn btn-danger btn-sm">Eliminar</a>
              </td>
            </tr>
             <% } %>
            <% } %>
            </tbody>
          </table>
        </div>
        <div class="col-md-5">
          <div class="card-body">
    
            <form action="/guardar" method="POST">
              <div class="form-group">
                <input type="text" name="nombre" placeholder="nombre" class="form-control" autofocus>
              </div>
              <div class="form-group">
                <input type="text" name="direccion" placeholder="direccion" class="form-control">
              </div>
              <div class="form-group">
                <input type="number" name="edad" placeholder="edad" class="form-control">
              </div>
    
              <button type="submit" class="btn btn-primary">
                Guardar Usuario
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    



</body>
</html>